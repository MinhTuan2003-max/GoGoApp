<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:layout_marginVertical="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Tiêu đề ngày -->
        <TextView
            android:id="@+id/dayTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày 1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- Bữa sáng -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bữa sáng"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginTop="8dp" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/breakfastRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/addBreakfastButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm món"
            android:textSize="14sp"
            android:backgroundTint="#DDAD7B"
            android:textColor="@android:color/white"
            android:layout_marginTop="4dp" />

        <!-- Bữa trưa -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bữa trưa"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginTop="16dp" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lunchRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/addLunchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm món"
            android:textSize="14sp"
            android:backgroundTint="#DDAD7B"
            android:textColor="@android:color/white"
            android:layout_marginTop="4dp" />

        <!-- Bữa tối -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bữa tối"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginTop="16dp" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dinnerRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/addDinnerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm món"
            android:textSize="14sp"
            android:backgroundTint="#DDAD7B"
            android:textColor="@android:color/white"
            android:layout_marginTop="4dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>